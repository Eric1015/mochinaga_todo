<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<%= form_for :anything, url: {action: "index"}, html: {method: "get"}  do |form| %>
  <%= form.select :todos_order, options_for_select(['優先度高い順', '優先度低い順']) %>
  <%= form.submit "並べ替える" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Priority</th>
      <th>Is finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.content %></td>
        <td><%= todo.priority %></td>
        <td><%= todo.is_finished %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
